{
  "name": "riffroom",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm:dev:*\"",
    "dev:web": "cd packages/web && pnpm dev",
    "dev:desktop": "cd packages/desktop && pnpm dev",
    "dev:backend": "cd packages/backend && uv run uvicorn app.main:app --reload --port 8007",
    "build": "pnpm build:web && pnpm build:desktop",
    "build:web": "cd packages/web && pnpm build",
    "build:desktop": "cd packages/desktop && pnpm build",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "cd packages/web && tsc --noEmit && cd ../desktop && tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "test": "vitest",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "concurrently": "^9.0.1",
    "eslint": "^9.13.0",
    "prettier": "^3.3.3",
    "vitest": "^2.1.3",
    "@playwright/test": "^1.48.2"
  },
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
